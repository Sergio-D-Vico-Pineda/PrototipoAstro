---
interface Props {
   title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
   <head>
      <meta charset="UTF-8" />
      <meta name="description" content="Astro description" />
      <meta name="viewport" content="width=device-width" />
      <title>{title}</title>
   </head>
   <body class="font-ubuntu">
      <slot />
   </body>
</html>
<style>
   body {
      background: url("/background.svg");
   }
   @font-face {
      font-family: "Ubuntu";
      src: url("/fonts/Ubuntu-Regular.ttf");
      font-weight: normal;
      font-style: normal;
      font-display: swap;
   }
</style>
